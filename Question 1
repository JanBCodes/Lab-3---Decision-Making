<script>

let user_name, side_a, side_b, side_c;
alert(`Welcome to the Ministry of Education's Triangle Corner`)
user_name=prompt(`Please enter your name`);
alert(`Nice to meet you ${user_name}, Let's learn about Triangles!`);

side_a=parseFloat(prompt(`Please enter the first dimension/side of your triangle`));
side_b=parseFloat(prompt(`Now enter the second dimension/side of your triangle`));
side_c=parseFloat(prompt(`Almost there, enter the last dimension/side of your triangle`));

if (side_a <= 0 || side_b <= 0 ||side_c <= 0)
{
	alert(`Oops! This isn't a valid triangle, Please try again!`); 
}
else if (side_a==side_b && side_b==side_c)
{
	alert(`This triangle is an Equilateral triangle, it consist of 3 equal sides`); 
}
else if (side_a==side_b || side_b==side_c || side_c==side_a)
{
	alert(`This triangle is an Isosceles triangle, it consist of 2 equal sides`); 

}
else
{
	alert(`This triangle is an Scalene triangle, none of the sides are equal`);
}

</script>
